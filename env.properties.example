[ai]
openrouter.url = https://openrouter.ai/api/v1/chat/completions
openrouter.api_key =
openrouter.model = x-ai/grok-4.1-fast
default_provider = ollama
default_model = gpt-oss
lm_studio.url = http://localhost:1234
ollama.url = http://localhost:11434
ollama.api_key =
ollama.model = gpt-oss
openai.url = https://api.openai.com
anthropic.url = https://api.anthropic.com
openai.endpoint = https://api.openai.com/v1
default_temperature = 0.7
default_max_tokens = 1000
temperature.min = 0.0
temperature.max = 1.0
max_tokens.min = 100
max_tokens.max = 4000

[logging]
default_level = INFO
max_file_size_mb = 10
backup_count = 5
levels = DEBUG,INFO,WARNING,ERROR,CRITICAL

[ui]
default_theme = auto
themes = light,dark,auto
default_font_size = medium
font_sizes = small,medium,large
auto_save = true
cache_size_mb = 100
language = en

[export]
default_format = json
formats = json,zip
default_study_plans = true
default_assessments = true
default_content = true
default_analytics = false

[cleanup]
old_sessions.enabled = true
old_logs.enabled = false
unused_content.enabled = false
old_sessions.age_days = 365
old_logs.age_days = 180

[database]
url = sqlite:///slm_educator.db
echo = false

[security]
password_min_length = 8
max_login_attempts = 5
account_lockout_duration_minutes = 30

[paths]
logs = logs
data = data
exports = exports
imports = imports

[performance]
cache_enabled = true
cache_size_mb = 100
cache_ttl_seconds = 3600
